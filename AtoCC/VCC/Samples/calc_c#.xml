                <CODE>
                    $$ = (int.Parse($1) - int.Parse($3)).ToString();

                </CODE>
            </RIGHTSIDE>
            <RIGHTSIDE>
                <RULE name="Term"/>
                <CODE>
                    $$ = $1;

                </CODE>
            </RIGHTSIDE>
        </RULE>
        <RULE name="Term" color="#FFE1FF">
            <RIGHTSIDE>
                <RULE name="Term"/>
                <TOKEN name="Mal"/>
                <RULE name="Ausdruck"/>
                <CODE>
                    $$ = (int.Parse($1) * int.Parse($3)).ToString();

                </CODE>
            </RIGHTSIDE>
            <RIGHTSIDE>
                <RULE name="Term"/>
                <TOKEN name="Durch"/>
                <RULE name="Ausdruck"/>
                <CODE>
                    $$ = (int.Parse($1) / int.Parse($3)).ToString();

                </CODE>
            </RIGHTSIDE>
            <RIGHTSIDE>
                <RULE name="Ausdruck"/>
                <CODE>
                    $$ = $1;

                </CODE>
            </RIGHTSIDE>
        </RULE>
        <RULE name="Ausdruck" color="#FFE1FF">
            <RIGHTSIDE>
                <TOKEN name="Zahl"/>
                <CODE>
                    $$ = $1;

                </CODE>
            </RIGHTSIDE>
            <RIGHTSIDE>
                <TOKEN name="KlammerAuf"/>
                <RULE name="Rechnung"/>
                <TOKEN name="KlammerZu"/>
                <CODE>
                    $$ = $2;

                </CODE>
            </RIGHTSIDE>
        </RULE>
    </RULES>
</VCC>
