        <RULE name="Ausgabe" color="#FFE1FF">
            <RIGHTSIDE>
                <RULE name="Rechnung"/>
                <CODE>
                    // Ausgabe des Ergebnisses 
Output.WriteLine($1);

                </CODE>
            </RIGHTSIDE>
        </RULE>
        <RULE name="Rechnung" color="#FFE1FF">
            <RIGHTSIDE>
                <RULE name="Rechnung"/>
                <TOKEN name="Plus"/>
                <RULE name="Term"/>
                <CODE>
                    // Alle Platzhalter sind Strings und m√ºssen umgewandelt werden
$$ = (int.Parse($1) + int.Parse($3)).ToString();

                </CODE>
            </RIGHTSIDE>
            <RIGHTSIDE>
                <RULE name="Rechnung"/>
                <TOKEN name="Minus"/>
